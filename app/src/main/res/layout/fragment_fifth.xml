<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Оборачиваем LinearLayout внутрь ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity"
            tools:ignore="UselessParent">

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите пароль"
        app:layout_constraintBottom_toTopOf="@+id/downloadplumaprofile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/downloadplumaprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/donloadplumaprofile"
                app:icon="@drawable/ic_pluma"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="@null"
                android:backgroundTint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/installplumaprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/installplumaprofile"
                app:icon="@drawable/ic_pluma"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="@null"
                android:backgroundTint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/downloadtelegramprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/downloadtelegramprofile"
                app:icon="@drawable/ic_telegramx"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="@null"
                android:backgroundTint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/installtelegramprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/installtelegramprofile"
                app:icon="@drawable/ic_telegramx"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="@null"
                android:backgroundTint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/downloadk9mailprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/downloadk9mailprofile"
                app:icon="@drawable/ic_k9"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="@null"
                android:backgroundTint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/installk9mailprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/installk9mailprofile"
                app:icon="@drawable/ic_k9"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="@null"
                android:backgroundTint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/downloadgoogleauth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Скачать com.google.android.apps.authenticator2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/installplumaprofile"
                app:layout_constraintVertical_bias="0.154" />

            <Button
                android:id="@+id/installgoogleauth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Установить com.google.android.apps.authenticator2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.71" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>