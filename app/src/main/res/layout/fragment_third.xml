<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main"
        android:layout_margin="16dp"
        tools:context=".MainActivity"
        tools:ignore="UselessParent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/downloadgnucashgpg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/installgnucashgpg"
            app:icon="@drawable/ic_download"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconTint="@null"
            android:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button" />


        <EditText
            android:id="@+id/editTextPasswordgnucash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите пароль"
            android:minHeight="48dp" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/decryptgnucashgpg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/decryptgnucashgpg"
            app:icon="@drawable/ic_decrypt"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconTint="@null"
            android:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button"
            tools:ignore="UsingOnClickInXml,VisualLintButtonSize" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/deletegnucashgpg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deletegnucashgpg"
            app:icon="@drawable/ic_trash"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconTint="@null"
            android:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button"
            tools:ignore="UsingOnClickInXml,VisualLintButtonSize" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/downloadnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/downloadnote"
            app:icon="@drawable/ic_download"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconTint="@null"
            android:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gitclonedcim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gitclonedcim"
            app:icon="@drawable/ic_gitclone"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconTint="@null"
            android:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/copydcim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copydcim"
            app:icon="@drawable/ic_copy"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconTint="@null"
            android:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button"
            tools:ignore="UsingOnClickInXml,VisualLintButtonSize" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reboot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reboot"
            app:icon="@drawable/ic_reboot"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconTint="@null"
            android:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button"
            tools:ignore="UsingOnClickInXml,VisualLintButtonSize" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/poweroff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/poweroff"
            app:icon="@drawable/ic_reboot"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconTint="@null"
            android:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button"
            tools:ignore="UsingOnClickInXml,VisualLintButtonSize" />


    </LinearLayout>
</FrameLayout>